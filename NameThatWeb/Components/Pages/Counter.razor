@page "/counter"
@rendermode InteractiveServer

<h3>Guess the Fish</h3>

<img src="images/piggvar.jpg" alt="Fish Image" style="width: 300px; height: auto;" />

<p>Select the correct name for the fish below:</p>

@if (isCorrect != null)
{
    <p>@(isCorrect == true ? "Correct!" : "Wrong, try again!")</p>
}

<div>
    @foreach (var option in options)
    {
        <button @onclick="() => CheckAnswer(option)">@option</button>
    }
</div>

@code {
    private string correctAnswer = "Piggvar";
    private string[] options = { "Piggvar", "Laks", "Torsk", "Rødspætte", "Helleflynder" };
    private bool? isCorrect = null;

    private void CheckAnswer(string selectedOption)
    {
        if (selectedOption == correctAnswer)
        {
            isCorrect = true;
        }
        else
        {
            isCorrect = false;
        }
    }
}